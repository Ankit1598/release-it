{
	"git": {
		"commit": true,
		"commitMessage": "chore: release v${version}",
		"tag": true,
		"tagName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": true,
		"releaseName": "v${version}"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{
						"type": "feat",
						"section": "Features"
					},
					{
						"type": "revert",
						"section": "Revert"
					},
					{
						"type": "docs",
						"section": "Documentation"
					},
					{
						"type": "fix",
						"section": "Bug Fixes"
					}
				]
			}
		}
	}
}
