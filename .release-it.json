{
	"git": {
		"commit": true,
		"commitMessage": "chore: release v${version}",
		"tag": true,
		"tagName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": true,
		"releaseName": "v${version}"
	},
	"plugins": {
		"release-it-lerna-changelog": {
			"infile": "CHANGELOG.md",
			"launchEditor": true
		}
	}
}
