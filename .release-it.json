{
	"git": {
		"commit": true,
		"commitMessage": "chore: release v${version}",
		"tag": true,
		"tagName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"tokenRef": "GITHUB_TOKEN"
	},
	"plugins": {
		"@release-it-plugins/lerna-changelog": {
			"infile": "CHANGELOG.md",
			"launchEditor": false
		}
	}
}
